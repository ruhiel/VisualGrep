<mah:MetroWindow x:Class="VisualGrep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualGrep"
        xmlns:vm="clr-namespace:VisualGrep.ViewModels"  
        mc:Ignorable="d"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="MainWindow" Height="450" Width="800">
    <mah:MetroWindow.DataContext>
        <vm:MainWindowViewModel/>
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding FolderPath.Value}"/>
            <Button Grid.Column="1" Content="検索" Command="{Binding SearchCommand}"/>
        </Grid>
        <TextBox Grid.Row="1" Text="{Binding SearchText.Value}"/>
        <DataGrid Grid.Row="2" Margin="10" ItemsSource="{Binding LineInfoList}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ファイル名" Width="120" Binding="{Binding FileName}"/>
                <DataGridTextColumn Header="場所" Width="120" Binding="{Binding FilePath}"/>
                <DataGridTextColumn Header="行" Width="60" Binding="{Binding Line}"/>
                <DataGridTextColumn Header="文字列" Width="*" Binding="{Binding Text}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>
